<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?selectableItemBackground"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_weight="0"
        android:background="@drawable/rounded_corners_12"
        android:clipToOutline="true"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvPlantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.LabelSmall"
            android:textColor="@color/light_primary_color"
            tools:text="Пшеница" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="4dp" />

        <TextView
            android:id="@+id/tvDiseaseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.TitleMedium"
            android:textStyle="bold"
            tools:text="Коричневая ржавчина" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="4dp" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.BodyMedium"
            tools:text="Желтая ржавчина, или полосатая ржавчина, получила свое название от появления полос желтого цвета, образующихся параллельно вдоль жилков каждой листовой пластинки. Эти желтые полосы на самом деле Read More" />

    </LinearLayout>

</LinearLayout>