<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wheat_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/TextAppearance.Material3.BodyLarge"
        android:textSize="24sp"
        android:layout_marginBottom="90dp"
        android:text="@string/let_s_heal_a_crop_with_us"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:id="@+id/te"
        app:layout_constraintTop_toBottomOf="@id/textTop"
        app:layout_constraintLeft_toLeftOf="@id/textTop"
        style="@style/TextAppearance.Material3.BodyLarge"
        android:textSize="18sp"
        android:text="@string/let_s_" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStart"
        android:backgroundTint="#427E3B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cornerRadius="43dp"
        android:paddingVertical="20dp"
        android:paddingHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/te"
        android:layout_marginVertical="28dp"
        style="@style/TextAppearance.Material3.BodyLarge"
        app:layout_constraintLeft_toLeftOf="@id/te"
        android:textColor="@color/white"
        android:text="Get Started" />

    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/first_next"
        android:layout_marginStart="8dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/btnStart"
        app:layout_constraintLeft_toRightOf="@id/btnStart"
        app:layout_constraintTop_toTopOf="@id/btnStart"
        android:src="@drawable/baseline_navigate_next_24" />

</androidx.constraintlayout.widget.ConstraintLayout>